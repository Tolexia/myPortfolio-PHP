{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'form-col'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-item'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password','attr': {'class': 'form-item'}
        }) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-item'}}) }}

        <button type="submit" class="btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24"><path d="M12 2c5.514 0 10 4.486 10 10s-4.486 10-10 10-10-4.486-10-10 4.486-10 10-10zm0-2c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6.25 8.891l-1.421-1.409-6.105 6.218-3.078-2.937-1.396 1.436 4.5 4.319 7.5-7.627z"/></svg>
        </button>
    {{ form_end(registrationForm) }}
{% endblock %}
